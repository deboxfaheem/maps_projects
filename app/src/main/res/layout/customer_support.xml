<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer_support">

   <RelativeLayout
       android:layout_width="match_parent"
       android:background="#F2F3F4"
       android:layout_height="match_parent">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Hi Jeet, How can we help you today?"
           android:gravity="center"
           android:layout_marginTop="30dp"
           android:id="@+id/text"
           android:fontFamily="@font/calibrib"
           android:textColor="#1C2833"
           android:textSize="15dp"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:id="@+id/search"
           android:layout_below="@+id/text"
           android:fontFamily="@font/calibri"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="60dp"
           android:hint="Search your query"
           android:gravity="center"
           android:layout_marginRight="66dp"
           android:background="@drawable/whiteplane_background"/>
       <ImageView
           android:layout_width="50dp"
           android:layout_height="40dp"
           android:src="@drawable/ic_search_black_24dp"
           android:layout_below="@id/text"
           android:layout_marginTop="15dp"
           android:background="@drawable/home_button_background"
           android:layout_alignParentEnd="true"
           android:layout_marginRight="50dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:weightSum="2"
           android:layout_below="@+id/search"
           android:layout_marginTop="20dp"
           android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:weightSum="2"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/search"
           android:background="@drawable/whiteplane_background"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Queries"
               android:textColor="#1C2833"
               android:textSize="15dp"
               android:fontFamily="@font/calibrib"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="10dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginTop="20dp"
               android:weightSum="3">
                   <ImageView
                       android:id="@+id/itemimag"
                       android:layout_width="50dp"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:layout_margin="2dp"
                       android:layout_weight="1"
                       android:src="@mipmap/carticon"
                       android:contentDescription="@string/app_name"/>
                   <ImageView
                       android:id="@+id/itemimge"
                       android:layout_width="50dp"
                       android:layout_height="match_parent"                       android:layout_gravity="center"
                       android:layout_margin="2dp"
                       android:layout_weight="1"
                       android:src="@mipmap/return_cart"
                       android:contentDescription="@string/app_name"/>
                   <ImageView
                       android:id="@+id/itemimage"
                       android:layout_width="50dp"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:layout_margin="2dp"
                       android:layout_weight="1"
                       android:src="@mipmap/paymentiuueicon"
                       android:contentDescription="@string/app_name"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginTop="3dp"
               android:weightSum="3">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="My Orders"
                   android:fontFamily="@font/calibri"
                   android:gravity="center"
                   android:textColor="#1C2833"
                   android:textSize="12dp"
                   android:layout_weight="1"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Return/Exchange"
                   android:textColor="#1C2833"
                   android:textSize="12dp"
                   android:fontFamily="@font/calibri"
                   android:gravity="center"
                   android:layout_weight="1"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Payment Issue"
                   android:fontFamily="@font/calibri"
                   android:gravity="center"
                   android:textColor="#1C2833"
                   android:textSize="12dp"
                   android:layout_weight="1"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:orientation="horizontal"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginTop="25dp"
               android:weightSum="3">
               <ImageView
                   android:id="@+id/itemiag"
                   android:layout_width="50dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:src="@mipmap/myaccounticon"
                   android:contentDescription="@string/app_name"/>
               <ImageView
                   android:id="@+id/itemime"
                   android:layout_width="50dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:src="@mipmap/genera_queryicon"
                   android:contentDescription="@string/app_name"/>
               <ImageView
                   android:id="@+id/iteimag"
                   android:layout_width="50dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:src="@mipmap/marksmambericon"
                   android:contentDescription="@string/app_name"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginBottom="40dp"
               android:layout_marginTop="3dp"
               android:weightSum="3">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="My Account"
                   android:textColor="#1C2833"
                   android:textSize="12dp"
                   android:fontFamily="@font/calibri"
                   android:gravity="center"
                   android:layout_weight="1"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="General Query"
                   android:textColor="#1C2833"
                   android:textSize="12dp"
                   android:fontFamily="@font/calibri"
                   android:gravity="center"
                   android:layout_weight="1"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Marks Member"
                   android:gravity="center"
                   android:textColor="#1C2833"
                   android:textSize="12dp"
                   android:fontFamily="@font/calibri"
                   android:layout_weight="1"/>
           </LinearLayout>
       </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="30dp"
               android:background="@drawable/whiteplane_background"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="10dp"
                   android:id="@+id/relative">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="FAQS"
                   android:textSize="15dp"
                   android:layout_marginTop="15dp"
                   android:fontFamily="@font/calibri"
                   android:textColor="#1C2833"
                   android:id="@+id/faq"
                   android:textStyle="bold"
                   android:gravity="center"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="I am unable to log in / sign up"
                   android:layout_below="@+id/faq"
                   android:layout_marginTop="20dp"
                   android:fontFamily="@font/calibri"
                   android:gravity="center"/>
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20dp"
                       android:layout_below="@+id/faq"
                       android:id="@+id/image"
                       android:src="@drawable/ic_navigate_next_black_24dp"
                       android:layout_alignParentEnd="true"
                       android:gravity="center"/>
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_below="@+id/image"
                       android:background="#cccccc"
                       android:layout_marginStart="15dp"
                       android:layout_marginEnd="15dp"
                       android:layout_marginTop="5dp"
                       android:id="@+id/view"/>
               </RelativeLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:layout_marginTop="3dp"
                       android:id="@+id/relativ">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="I am not happy with quality of product"
                           android:layout_marginTop="10dp"
                           android:fontFamily="@font/calibri"
                           android:gravity="center"/>
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                           android:id="@+id/imae"
                           android:src="@drawable/ic_navigate_next_black_24dp"
                           android:layout_alignParentEnd="true"
                           android:gravity="center"/>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:layout_below="@+id/imae"
                           android:background="#cccccc"
                           android:layout_marginStart="15dp"
                           android:layout_marginEnd="15dp"
                           android:layout_marginTop="5dp"
                           android:id="@+id/vew"/>
                   </RelativeLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:layout_marginTop="3dp"
                       android:id="@+id/relatve">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="I want to change the delivery slot"
                           android:layout_marginTop="10dp"
                           android:fontFamily="@font/calibri"
                           android:gravity="center"/>
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                           android:id="@+id/imge"
                           android:src="@drawable/ic_navigate_next_black_24dp"
                           android:layout_alignParentEnd="true"
                           android:gravity="center"/>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:layout_below="@+id/imge"
                           android:background="#cccccc"
                           android:layout_marginStart="15dp"
                           android:layout_marginEnd="15dp"
                           android:layout_marginTop="5dp"
                           android:id="@+id/vie"/>
                   </RelativeLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:layout_marginTop="3dp"
                       android:id="@+id/reltive">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="I want to contact customer service"
                           android:layout_marginTop="10dp"
                           android:fontFamily="@font/calibri"
                           android:gravity="center"/>
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                           android:id="@+id/imag"
                           android:src="@drawable/ic_navigate_next_black_24dp"
                           android:layout_alignParentEnd="true"
                           android:gravity="center"/>
                   </RelativeLayout>
               </LinearLayout>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="30dp"
                   android:layout_marginBottom="5dp"
                   android:layout_gravity="center">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Show More"
                   android:fontFamily="@font/calibri"
                   android:id="@+id/show"
                   android:textColor="#BE0D1B"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/show"
                   android:layout_marginLeft="20dp"
                   android:src="@drawable/ic_expand_less_black_24dp"/>
               </RelativeLayout>
           </LinearLayout>
       </LinearLayout>
   </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>